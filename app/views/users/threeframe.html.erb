<% if @settings.style == "3h" %>
	<iframe src="<%= @settings.website1 %>" class="leftthree <%= @settings.background %>-bg <%= @settings.skin %>"></iframe>
	<iframe src="<%= @settings.website2 %>" class="middlethree <%= @settings.background %>-bg <%= @settings.skin %>"></iframe>
	<iframe src="<%= @settings.website3 %>" class="rightthree <%= @settings.background %>-bg <%= @settings.skin %>"></iframe>
<% elsif @settings.style == "3b" %>
	<iframe src="<%= @settings.website1 %>" class="left <%= @settings.background %>-bg <%= @settings.skin %>"></iframe>
	<iframe src="<%= @settings.website2 %>" class="right <%= @settings.background %>-bg <%= @settings.skin %>"></iframe>
	<iframe src="<%= @settings.website3 %>" class="full <%= @settings.background %>-bg <%= @settings.skin %>"></iframe>
<% elsif @settings.style == "3t" %>
	<iframe src="<%= @settings.website1 %>" class="full <%= @settings.background %>-bg <%= @settings.skin %>"></iframe>
	<iframe src="<%= @settings.website2 %>" class="left <%= @settings.background %>-bg <%= @settings.skin %>"></iframe>
	<iframe src="<%= @settings.website3 %>" class="right <%= @settings.background %>-bg <%= @settings.skin %>"></iframe>
<% end %>








